$TTL 86400
@   IN  SOA ns1.creativite.home. admin.creativite.home. (
        2025112801 ; Serial
        3600        ; Refresh
        1800        ; Retry
        1209600     ; Expire
        86400 )     ; Negative Cache TTL

; Name servers
@       IN  NS      ns1.creativite.home.

; Host addresses
ns1     IN  A       192.168.122.167
@       IN  A       192.168.122.167
mail    IN  A       192.168.122.167
www     IN  CNAME   @

; Mail exchange
@   IN  MX 10 mail.creativite.home.

; SPF record (basic allow for mailserver)
@   IN  TXT "v=spf1 a mx ~all"

; DMARC
_dmarc  IN  TXT "v=DMARC1; p=none; rua=mailto:admin@creativite.home"

; DKIM include (auto-generated by docker-mailserver)
$INCLUDE "/var/lib/bind/dkim/creativite.home/mail.private"